<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PoyoWeb's Wonderful Editor</title>
  <span style="display: none;" id="fileName">{{ fileName }}</span>
  <span style="display: none;" id="fileData">{{ fileData }}</span>
</head>

<body height="100%">
    <div id="editor" height="100%"></div>
    <button>Save</button>

  <script type="importmap">
    {
      "imports": {
        "prism-code-editor/": "https://cdn.jsdelivr.net/npm/prism-code-editor@3.4.0/dist/"
      }
    }
  </script>
  <script type="module">
    import { minimalEditor, basicEditor, fullEditor, readonlyEditor } from "prism-code-editor/setups/index.js"
    import "prism-code-editor/prism/languages/markup.js"

    const fulleditor = fullEditor(
      "#editor",
      {
        language: "html",
        theme: "github-dark",
        value: document.getElementById("fileData").innerText,
      },
      () => console.log("ready"),
    )

    import("prism-code-editor/prism/languages/common").then(() => editor.update())

    console.log("value: "+fulleditor.value);
  </script>
</body>

</html>